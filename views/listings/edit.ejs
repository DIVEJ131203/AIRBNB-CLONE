<% layout("layouts/boilerplate.ejs") %>
<body>
    <br>
    <br>
    <h3>Edit Listing</h3>
    <br>
    <form action="/listings/<%= listing._id %>" method="POST" novalidate class="needs-validation">
        <div>
            <label class="form-label" for="title">Title:</label>
            <input type="text" id="title" name="title" required class="form-control" value="<%= listing.title %>">
            <div class="valid-feedback">Title Looks Good</div>
            <div class="invalid-feedback">Please enter title for your listing</div>   
        </div>
        <br><br>
        <div>
            <label for="description" class="form-label">Description:</label>
            <input type="text" id="description" required class="form-control" name="description" value="<%= listing.description %>">
            <div class="invalid-feedback">Please enter description</div>
        </div>
        <br><br>
        <div>
            <label for="image" class="form-label">Image URL:</label>
            <input type="text" id="image" name="image" required value="<%= listing.image %>" class="form-control">
            <div class="invalid-feedback">Please enter images of your property</div>
        </div>
        <br><br>
        <div>
            <label for="price" class="form-label">Price:</label>
        <input type="number" id="price" required class="form-control" name="price" value="<%= listing.price %>">
        <div class="invalid-feedback">Please enter price</div>
        </div>
        <br><br>
        <div>
            <label for="country"  class="form-label">Country:</label>
            <input type="text" id="country" required name="country"  class="form-control"  value="<%= listing.country %>">
            <div class="invalid-feedback">Please enter country</div>
        </div>
        <br><br>
        <div>
            <label for="location" class="form-label">Location:</label>
        <input type="text" id="location" required name="location" class="form-control" value="<%= listing.location %>">
        <div class="invalid-feedback">Please enter country</div>
        </div>
        
        <br><br>
        
        <button type="submit" class="btn btn-dark mb-3 save-btn" >Save Changes</button>
    </form>
</body>


